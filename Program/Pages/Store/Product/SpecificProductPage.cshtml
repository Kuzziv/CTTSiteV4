@page "{id:int}"
@model CTTSite.Pages.Store.Product.SpecificProductPageModel
@{
}


<h1 class="text-center" style="margin-bottom:4%"><b>@Model.Item.Name</b></h1>
<br />
<div class="row text-center">
    <div class="col-1"></div>
    <div class="col-4">
        <h4>Description:</h4><br />
        <p>@Model.Item.Description</p>
        <br />
        <h4>£@Model.Item.Price</h4>
        <form method="post">
            <div class="form-row">
                <p>Amount:</p>
                <div class="form-row text-center">
                    <div class="col mx-auto" style="width: 80px;">
                        <div class="form-group">
                            <input asp-for="@Model.Count" class="form-control" style="width: 80px;" />
                            <span asp-validation-for="@Model.Count" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="text-center">
                        <p style="color: @Model.MessageColor;">@Model.Message</p>
                    </div>
                    <div class="form-group ">
                        <input type="submit" value="Add to cart" class="btn btn-dark" />
                        <a asp-page="AllProductsPage" class="btn btn-outline-dark">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-2"></div>
    <div class="col-4">
        <img src="@Model.Item.IMG" alt="Product image" class="responsive" style="margin-bottom:4%" />
    </div>
    <div class="col-1"></div>
</div>
