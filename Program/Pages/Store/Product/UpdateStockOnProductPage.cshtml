@page "{id:int}"
@model CTTSite.Pages.Store.Product.UpdateStockOnProductPageModel
@{
}


<h1>Update Stock</h1>

<form method="post">
    <div class="form-group">
        <label for="ItemName">Item Name:</label>
        <input type="text" id="ItemName" class="form-control" value="@Model.Item.Name" readonly />
    </div>

    <div class="form-group">
        <label for="ItemStock">Current Stock:</label>
        <input type="text" id="ItemStock" class="form-control" value="@Model.Item.Stock" readonly />
    </div>

    <div class="form-group">
        <label for="Count">New Stock Count:</label>
        <input type="number" id="Count" class="form-control" asp-for="count" required />
    </div>

    <div class="form-group">
        <input type="submit" value="Update stock" class="btn btn-dark" />
        <a asp-page="AdminProductsPage" class="btn btn-outline-dark">Back</a>
    </div>
</form>