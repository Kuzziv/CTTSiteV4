@page "{id:int}"
@model CTTSite.Pages.Store.Product.DeleteProductPageModel
@{
}


<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-body">
                <p class="text-white"><b>Are you sure that you want to delete this product: "@Model.Item.Name"</b></p>
            </div>
            <div class="modal-footer">
                <form method="post">
                    <button type="submit" class="btn btn-danger">Yes</button>
                    <a class="btn btn-secondary" asp-page="AdminProductsPage">No</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#myModal").modal({ backdrop: "static" });
            $("#myModal").modal('show')
        })
    </script>
}